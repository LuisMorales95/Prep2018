<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragment_ActualizarUsuario">

    <!-- TODO: Update blank fragment layout -->

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <android.support.constraint.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/ActualizarUsuario_titulo"
                        android:layout_width="0dp"
                        android:layout_height="@android:dimen/app_icon_size"
                        android:background="@color/colorPrimary"
                        android:gravity="center"
                        android:text="Actualizar Usuario"
                        android:textColor="@color/TextInPrimary"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <EditText
                        android:id="@+id/ActualizarUsuario_Nombre"
                        android:layout_width="0dp"
                        android:layout_height="@android:dimen/app_icon_size"
                        android:layout_marginEnd="16dp"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="16dp"
                        android:background="@drawable/round_editssignup"
                        android:ems="10"
                        android:hint="Nombre"
                        android:inputType="textPersonName"
                        android:paddingLeft="16dp"
                        android:paddingRight="16dp"
                        android:singleLine="true"
                        android:textColor="@color/SignUpText"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/ActualizarUsuario_titulo" />

                    <EditText
                        android:id="@+id/ActualizarUsuario_Usuario"
                        android:layout_width="0dp"
                        android:layout_height="@android:dimen/app_icon_size"
                        android:layout_marginEnd="16dp"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="8dp"
                        android:background="@drawable/round_editssignup"
                        android:ems="10"
                        android:hint="Usuario"
                        android:inputType="textPersonName"
                        android:paddingLeft="16dp"
                        android:paddingRight="16dp"
                        android:singleLine="true"
                        android:textColor="@color/SignUpText"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/ActualizarUsuario_Nombre" />

                    <EditText
                        android:id="@+id/ActualizarUsuario_Contrasenia"
                        android:layout_width="0dp"
                        android:layout_height="@android:dimen/app_icon_size"
                        android:layout_marginEnd="16dp"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="8dp"
                        android:background="@drawable/round_editssignup"
                        android:ems="10"
                        android:hint="Contraseña"
                        android:inputType="textPersonName"
                        android:paddingLeft="16dp"
                        android:paddingRight="16dp"
                        android:singleLine="true"
                        android:textColor="@color/SignUpText"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/ActualizarUsuario_Usuario" />

                    <Switch
                        android:id="@+id/ActualizarUsuario_Activar"
                        android:layout_width="0dp"
                        android:layout_height="@android:dimen/app_icon_size"
                        android:layout_marginEnd="16dp"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="16dp"
                        android:background="@drawable/round_editssignup"
                        android:paddingLeft="16dp"
                        android:paddingRight="16dp"
                        android:text="Activar Cuenta"
                        android:textColor="@color/SignUpText"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/ActualizarUsuario_Contrasenia" />

                    <Switch
                        android:id="@+id/ActualizarUsuario_Admin"
                        android:layout_width="0dp"
                        android:layout_height="@android:dimen/app_icon_size"
                        android:layout_marginEnd="16dp"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="16dp"
                        android:background="@drawable/round_editssignup"
                        android:paddingLeft="16dp"
                        android:paddingRight="16dp"
                        android:text="Permiso de Administrador"
                        android:textColor="@color/SignUpText"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/ActualizarUsuario_Activar" />

                    <Switch
                        android:id="@+id/ActualizarUsuario_Grafica"
                        android:layout_width="0dp"
                        android:layout_height="@android:dimen/app_icon_size"
                        android:layout_marginEnd="16dp"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="16dp"
                        android:background="@drawable/round_editssignup"
                        android:paddingLeft="16dp"
                        android:paddingRight="16dp"
                        android:text="Visualizar Graficas"
                        android:textColor="@color/SignUpText"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/ActualizarUsuario_Admin" />

                    <Switch
                        android:id="@+id/ActualizarUsuario_Capturar"
                        android:layout_width="0dp"
                        android:layout_height="@android:dimen/app_icon_size"
                        android:layout_marginEnd="16dp"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="16dp"
                        android:background="@drawable/round_editssignup"
                        android:paddingLeft="16dp"
                        android:paddingRight="16dp"
                        android:text="Capturar Información"
                        android:textColor="@color/SignUpText"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/ActualizarUsuario_Grafica" />

                    <Button
                        android:id="@+id/ActualizarUsuario_Actualizar"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        android:layout_marginEnd="16dp"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="16dp"
                        android:background="@drawable/round_corner_blue"
                        android:text="Actualizar Info"
                        android:textColor="@color/TextInPrimary"
                        android:textStyle="bold"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/ActualizarUsuario_Capturar" />

                </android.support.constraint.ConstraintLayout>
            </android.support.v7.widget.CardView>
        </android.support.constraint.ConstraintLayout>
    </ScrollView>
</FrameLayout>